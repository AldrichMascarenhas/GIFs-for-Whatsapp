<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_gif_linearlayout"
    android:layout_width="196dp"
    android:layout_height="248dp"
    android:orientation="vertical">


    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gifImageView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scaleType="centerCrop" />


    <RelativeLayout
        android:id="@+id/item_book_text_container"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="@color/gif_image_without_palette"
        android:padding="@dimen/activity_horizontal_margin">

        <TextView
            android:id="@+id/gif_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:lines="1"
            android:textColor="@color/text_without_palette"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/gif_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/gif_name"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/text_without_palette"
            android:textSize="15sp" />

    </RelativeLayout>

</LinearLayout>